{
    "$schema": "https://turbo.build/schema.json",
    "extends": ["//"],
    "tasks": {
      "version": {
        "cache": false,
        "outputs": ["version.txt"]
      },
      "build": {
        "dependsOn": ["version"],
        "inputs": ["version.txt", "index.js"],
        "outputs": ["build"]
      }
    }
  }
  